{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [
    ".env*",
    "tsconfig.json"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "buildPackages",
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development"
      ]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production"
      ]
    }
  }
}