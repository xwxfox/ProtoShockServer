{
    "name": "@protoshock/database",
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "build": "NODE_ENV=production tsc --build && tsc-alias",
        "lint": "eslint . --ext .ts,.tsx --max-warnings 12",
        "check-types": "tsc --noEmit",
        "migrate": "drizzle-kit generate --config drizzle.config.ts",
        "verify:db": "node --loader ts-node/esm ./src/utils/verifySchema.ts"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "private": true,
    "devDependencies": {
        "@protoshock/eslint-config": "*",
        "@protoshock/typescript-config": "*",
        "@types/node": "^22.15.3",
        "@types/pg": "^8.15.5",
        "drizzle-kit": "^0.31.4",
        "eslint": "^9.31.0",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.20.3",
        "typescript": "5.8.2"
    },
    "dependencies": {
        "dotenv": "^17.2.1",
        "drizzle-kit": "^0.31.4",
        "drizzle-orm": "^0.44.3",
        "pg": "^8.16.3"
    }
}